    <!-- 'Eros' servlet - a status checker feed -->
    <servlet>
        <servlet-name>ErosQueryServlet</servlet-name>
        <servlet-class>com.esri.gpt.server.erosfeed.ErosQueryServlet</servlet-class>
        <init-param>
            <param-name>bundleBaseName</param-name>
            <param-value>gpt.resources.gpt</param-value>
        </init-param>
        <init-param>
            <param-name>defaultQuery</param-name>
            <param-value>f=atom&amp;contentType=liveData&amp;searchText=resource.url:http*</param-value>
